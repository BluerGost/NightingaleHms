@model IEnumerable<NightingaleHms.Models.State>
@{
    ViewBag.Title = "All States";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All States</h2>


@if (!Model.Any())
{
    <p>There is no States Yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>Edit</th>
        </tr>
        @foreach (var state in Model)
        {
            <tr>
                <td>@state.Name</td>
                <td>@Html.ActionLink("Edit", "EditState", "Admin", new { stateId = state.StateId }, new {@class="btn btn-primary"})</td>
            </tr>
        }
    </table>
}

