@model IEnumerable<NightingaleHms.Models.Plan>
@{
    ViewBag.Title = "AllPlans";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Plans</h2>


@if (!Model.Any())
{
    <p>There is no Plans Yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>Edit</th>
        </tr>
        @foreach (var plan in Model)
        {
            <tr>
                <td>@plan.Name</td>
                <td>@Html.ActionLink("Edit", "EditPlan", "Admin", new { planId = plan.PlanId }, new { @class="btn btn-primary"})</td>
            </tr>
        }
    </table>
}


